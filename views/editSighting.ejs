<%- include('header', {title: `Edit Sighting`}); -%>

<div class="container">
  <div class="row">
    <div class="col">
      <form action="/sighting/<%= index %>/edit?_method=PUT" method="POST">
        <div class="form-group">
          <label for="text">Text:</label><br />
          <input
            class="form-control"
            type="text"
            id="text"
            name="text"
            value="<%= currentDetails.text %>"
          /><br />

          <label for="date_time">Date and Time:</label><br />
          <input
            class="form-control"
            type="text"
            id="date_time"
            name="date_time"
            value="<%= currentDetails.date_time %> "
          /><br />

          <label for="city">City:</label><br />
          <input
            class="form-control"
            type="text"
            id="city"
            name="city"
            value="<%= currentDetails.city %> "
          /><br />

          <label for="state">State:</label><br />
          <input
            class="form-control"
            type="text"
            id="state"
            name="state"
            value="<%= currentDetails.city %> "
          /><br />

          <label for="shape">Shape:</label><br />
          <input
            class="form-control"
            type="text"
            id="shape"
            name="shape"
            value="<%= currentDetails.shape %> "
          /><br />

          <label for="duration">Duration:</label><br />
          <input
            class="form-control"
            type="text"
            id="duration"
            name="duration"
            value="<%= currentDetails.duration %> "
          /><br />

          <label for="summary">Summary:</label><br />
          <input
            class="form-control"
            type="text"
            id="summary"
            name="summary"
            value="<%= currentDetails.summary %> "
          /><br />

          <input class="btn btn-secondary" type="submit" value="Submit" /><br />
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('footer'); %>
