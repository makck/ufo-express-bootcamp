<%- include('header', {title: `${specifiedShape} Sightings`}); -%>

<div class="d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col">
        <h3><%= specifiedShape %> Sightings</h3>
        <div class="list-group">
          <% content.sightings.forEach((element) => { if(element.shape ===
          specifiedShape) { %>
          <a
            class="list-group-item list-group-item-light list-group-item-action"
            href="/sighting/<%= content.sightings.indexOf(element) %>"
            ><%= element.city %>, <%= element.date_time %></a
          >
          <% } }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer'); -%>
